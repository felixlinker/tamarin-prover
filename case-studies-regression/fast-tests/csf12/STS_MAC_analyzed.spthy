rule (modulo E) Sessionkey_Reveal:
   [ !SessionKey( ~tid, $I, $R, k ) ] --[ SesskRev( ~tid ) ]-> [ Out( k ) ]

  /* has exactly the trivial AC variant */

lemma KI_Perfect_Forward_Secrecy_I:
  all-traces
  "¬(∃ ttest I R sessKey #i1 #k hki hkr.
      (((((AcceptedI( ttest, I, R, hki, hkr, sessKey ) @ #i1) ∧
          (¬(∃ #r. Corrupt( I ) @ #r))) ∧
         (¬(∃ #r. Corrupt( R ) @ #r))) ∧
        (K( sessKey ) @ #k)) ∧
       (¬(∃ #i3. SesskRev( ttest ) @ #i3))) ∧
      (¬(∃ #i3 #i4 tpartner kpartner.
          (SesskRev( tpartner ) @ #i3) ∧
          (AcceptedR( tpartner, I, R, hki, hkr, kpartner ) @ #i4))))"
/*
guarded formula characterizing all counter-examples:
"∃ ttest I R sessKey #i1 #k hki hkr.
  (AcceptedI( ttest, I, R, hki, hkr, sessKey ) @ #i1) ∧ (K( sessKey ) @ #k)
 ∧
  (∀ #r. (Corrupt( I ) @ #r) ⇒ ⊥) ∧
  (∀ #r. (Corrupt( R ) @ #r) ⇒ ⊥) ∧
  (∀ #i3. (SesskRev( ttest ) @ #i3) ⇒ ⊥) ∧
  (∀ #i3 #i4 tpartner kpartner.
    (SesskRev( tpartner ) @ #i3) ∧
    (AcceptedR( tpartner, I, R, hki, hkr, kpartner ) @ #i4)
   ⇒
    ⊥)"
*/
simplify
solve( Init_1( $I.1, $R.1, ~ltkI, ~ekI ) ▶₀ #i1 )
  case Init_1
  solve( !Pk( $R.1, pk(~ltkR) ) ▶₁ #i1 )
    case Register_pk_clone_case_1
    solve( !KU( sign(<Y, 'g'^~ekI>, ~ltkR) ) @ #vk.7 )
      case Resp_1
      solve( !KU( KDF('g'^(~ekR.1*~ekI.2)) ) @ #vk.9 )
        case Sessionkey_Reveal_case_4
        solve( splitEqs(2) )
          case split_case_2
          solve( !KU( sign(<'g'^~x.5, 'g'^~tid.2>, ~ltkI.1) ) @ #vk.18 )
            case Init_2
            solve( !KU( mac('g'^(~tid.3*~x.6), sign(<'g'^~tid.3, 'g'^~x.6>, ~ltkR.2))
                   ) @ #vk.33 )
              case Resp_1
              solve( !KU( 'g'^~x.6 ) @ #vk.38 )
                case Init_1
                solve( !KU( 'g'^~tid.3 ) @ #vk.30 )
                  case Resp_1
                  solve( !KU( mac('g'^(~tid.3*~x.6), sign(<'g'^~x.6, 'g'^~tid.3>, ~ltkI.2))
                         ) @ #vk.19 )
                    case Init_2
                    SOLVED // trace found
                  qed
                qed
              qed
            qed
          qed
        qed
      qed
    qed
  qed
qed

lemma KI_Perfect_Forward_Secrecy_R:
  all-traces
  "¬(∃ ttest I R sessKey #i1 #k hki hkr.
      (((((AcceptedR( ttest, I, R, hki, hkr, sessKey ) @ #i1) ∧
          (¬(∃ #r. Corrupt( I ) @ #r))) ∧
         (¬(∃ #r. Corrupt( R ) @ #r))) ∧
        (K( sessKey ) @ #k)) ∧
       (¬(∃ #i3. SesskRev( ttest ) @ #i3))) ∧
      (¬(∃ #i3 #i4 tpartner kpartner.
          (SesskRev( tpartner ) @ #i3) ∧
          (AcceptedI( tpartner, I, R, hki, hkr, kpartner ) @ #i4))))"
/*
guarded formula characterizing all counter-examples:
"∃ ttest I R sessKey #i1 #k hki hkr.
  (AcceptedR( ttest, I, R, hki, hkr, sessKey ) @ #i1) ∧ (K( sessKey ) @ #k)
 ∧
  (∀ #r. (Corrupt( I ) @ #r) ⇒ ⊥) ∧
  (∀ #r. (Corrupt( R ) @ #r) ⇒ ⊥) ∧
  (∀ #i3. (SesskRev( ttest ) @ #i3) ⇒ ⊥) ∧
  (∀ #i3 #i4 tpartner kpartner.
    (SesskRev( tpartner ) @ #i3) ∧
    (AcceptedI( tpartner, I, R, hki, hkr, kpartner ) @ #i4)
   ⇒
    ⊥)"
*/
simplify
solve( !Pk( $I.1, pk(~ltkI) ) ▶₀ #i1 )
  case Register_pk_clone_case_1
  solve( Resp_1( $I.1, $R.1, ~ltkR, ~ekR, X ) ▶₁ #i1 )
    case Resp_1
    solve( !KU( sign(<X, 'g'^~ekR>, ~ltkI) ) @ #vk.5 )
      case Init_2_case_2
      solve( !KU( sign(<'g'^~ekR.3, 'g'^~ekI.2>, ~ltkR.1) ) @ #vk.20 )
        case Resp_1
        solve( !KU( KDF('g'^(~ekI.3*~ekR.4)) ) @ #vk.7 )
          case Sessionkey_Reveal_case_2
          solve( splitEqs(2) )
            case split_case_2
            solve( !KU( mac('g'^(~tid.1*~x.4), sign(<'g'^~tid.1, 'g'^~x.4>, ~ltkI.1))
                   ) @ #vk.6 )
              case Init_2
              solve( !KU( 'g'^~x.4 ) @ #vk.41 )
                case Resp_1
                solve( !KU( mac('g'^(~tid.1*~x.4), sign(<'g'^~x.4, 'g'^~tid.1>, ~ltkR.4))
                       ) @ #vk.44 )
                  case Resp_1
                  solve( !KU( 'g'^~tid.1 ) @ #vk.54 )
                    case Init_1
                    SOLVED // trace found
                  qed
                qed
              qed
            qed
          qed
        qed
      qed
    qed
  qed
qed





















